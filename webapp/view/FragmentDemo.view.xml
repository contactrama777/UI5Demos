<mvc:View controllerName="com.acc.Z_Fragment_UI.controller.FragmentDemo" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" 	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<VBox>
					<f:Form id="FormChange354"
			editable="true">
		
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="3"
					labelSpanL="3"
					labelSpanM="3"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="4"
					emptySpanL="4"
					emptySpanM="4"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="EmpName">
							<f:fields>
								<Input value="{j1>/name}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="SkillSet">
							<f:fields>
								<Input value="{j1>/skill}" id="skill"/>
								</f:fields>
						</f:FormElement>
						</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
					<Button text="OpenDailog" press="pressDialog"></Button>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>